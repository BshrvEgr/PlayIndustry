<Window x:Class="Basharov.Solodkov.Drozdov.PlayIndustry.ReserveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basharov.Solodkov.Drozdov.PlayIndustry"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="ReserveWindow" Height="200" Width="250">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Введите свое имя"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <TextBox VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Grid.Column="1"
                 Width="100"
                 x:Name="FullNameText"/>

        <Button Width="150"
                Height="30"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Margin="0 0 0 5"
                Content="Бронировать"
                Click="ReserveComputer_Click"/>

    </Grid>
</Window>
